<?xml version="1.0" encoding="utf-8"?>
<com.jeanbarrossilva.andre.ui.AndreLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:horizontalSpacing="10dp">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Theme.Andre.TextInputLayout"
        android:id="@+id/title_field_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:hint="@string/AreaComposerFragment_hint_title"
        app:startIconDrawable="@drawable/ic_title">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.jeanbarrossilva.andre.ui.DropdownButton
        style="@style/Theme.Andre.Button.Outlined"
        android:id="@+id/indicator_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="7sp"
        android:autoSizeMaxTextSize="14sp"
        tools:text="@string/SubareaIndicator_title_unset" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:insetTop="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:paddingVertical="0dp"
        android:paddingLeft="25dp"
        android:backgroundTint="@android:color/holo_red_light"
        app:icon="@drawable/ic_delete"
        app:iconSize="20dp"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white"
        tools:ignore="RtlSymmetry" />

</com.jeanbarrossilva.andre.ui.AndreLinearLayout>