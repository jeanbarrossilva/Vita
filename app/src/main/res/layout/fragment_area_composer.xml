<?xml version="1.0" encoding="utf-8"?>
<com.jeanbarrossilva.andre.ui.AndreLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:orientation="vertical"
    android:verticalSpacing="15dp">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Theme.Andre.TextInputLayout"
        android:id="@+id/name_field_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_title">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/AreaComposerFragment_name"
            android:focusedByDefault="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Theme.Andre.TextInputLayout"
        android:id="@+id/description_field_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_more_horiz">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/AreaComposerFragment_description" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Theme.Andre.TextInputLayout"
        android:id="@+id/attention_level_field_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:suffixText="%"
        app:startIconDrawable="@drawable/ic_emoji_emotions">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/AreaComposerFragment_attention_level"
            android:maxLength="3" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        style="@style/Theme.Andre.Button.Outlined"
        android:id="@+id/icon_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/AreaComposerFragment_icon"
        app:cornerRadius="0dp"
        tools:icon="@drawable/ic_family_restroom" />

</com.jeanbarrossilva.andre.ui.AndreLinearLayout>