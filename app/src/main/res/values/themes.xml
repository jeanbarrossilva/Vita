<resources xmlns:tools="http://schemas.android.com/tools">

    <style
        name="Theme.Andre"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">@bool/isSystemInLightTheme</item>
        <item
            name="android:windowLightNavigationBar"
            tools:targetApi="27">
            @bool/isSystemInLightTheme
        </item>
        <item name="android:statusBarColor">@color/statusBar</item>
        <item name="android:navigationBarColor">@color/navigationBar</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
    </style>

    <style
        name="Theme.Andre.Toolbar.Title"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">?android:fontFamily</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="Theme.Andre.Screen.Title"
        parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="Theme.Andre.BottomSheet"
        parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="Theme.Andre.BottomSheet.Animations">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style
        name="Theme.Andre.Toolbar"
        parent="Widget.MaterialComponents.Toolbar">
        <item name="android:elevation">2dp</item>
        <item name="android:background">@color/cardBackground</item>
        <item name="titleTextAppearance">@style/Theme.Andre.Toolbar.Title</item>
        <item name="titleTextColor">?android:textColorPrimary</item>
        <item name="subtitleTextColor">?android:textColorPrimary</item>
    </style>

    <style
        name="Theme.Andre.Button"
        parent="Widget.MaterialComponents.Button">
        <item name="android:paddingVertical">15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:backgroundTint">?android:colorBackground</item>
        <item name="iconTint">?android:textColorPrimary</item>
    </style>

    <style
        name="Theme.Andre.Button.Outlined"
        parent="Theme.Andre.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">0dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/areaCardStroke</item>
    </style>

    <style
        name="Theme.Andre.TextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="endIconMode">clear_text</item>
    </style>

    <declare-styleable name="AndreLinearLayout">
        <attr name="android:horizontalSpacing" />
        <attr name="android:verticalSpacing" />
    </declare-styleable>

    <declare-styleable name="AndreEditText">
        <attr name="android:textSize" format="dimension" />
        <attr name="android:textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="AndreRecyclerView">
        <attr name="android:spacing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="EmptyListView">
        <attr name="android:icon" format="reference" />
        <attr name="android:title" format="string" />
        <attr name="android:description" format="string" />
    </declare-styleable>

    <declare-styleable name="DropdownButton">
        <attr name="menu" format="reference" />
    </declare-styleable>
</resources>